{
  "name": "phun",
  "description": "Seamlessly integrate PHP execution within your JavaScript/TypeScript projects with Phun.",
  "keywords": [
    "phun",
    "php",
    "typescript",
    "bun",
    "templating",
    "rendering",
    "integration",
    "bun-shell",
    "php-scripting",
    "run",
    "serve"
  ],
  "version": "0.0.2",
  "private": false,
  "type": "module",
  "engines": {
    "bun": "^1.0.35",
    "node": "prefer bun",
    "npm": "prefer bun"
  },
  "packageManager": "bun@1.0.35",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://npmjs.com/package/phun",
  "repository": {
    "type": "git",
    "url": "https://github.com/siguici/phun"
  },
  "bugs": "https://github.com/siguici/phun/issues",
  "author": {
    "name": "Sigui Kess√© Emmanuel",
    "email": "siguici@proton.me",
    "url": "https://sigui.deno.dev"
  },
  "files": ["src"],
  "module": "./src/index.ts",
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json"
  },
  "scripts": {
    "check": "biome ci .",
    "fix": "bun run format.fix && bun run lint.fix",
    "format": "biome format .",
    "format.fix": "biome format --write .",
    "lint": "biome check .",
    "lint.fix": "biome check --apply-unsafe .",
    "test": "bun test",
    "test.cov": "bun test --coverage",
    "test.hot": "bun test --hot",
    "test.watch": "bun test --watch",
    "type.check": "tsc --incremental --noEmit"
  },
  "dependencies": {
    "boss.sh": "^0.0.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.3",
    "@types/bun": "^1.0.10",
    "@types/node": "^20.11.30",
    "typescript": "^5.4.3"
  }
}
